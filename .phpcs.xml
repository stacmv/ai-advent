<?xml version="1.0"?>
<ruleset name="AI Advent Challenge Coding Standard">
    <description>PSR-12 Extended coding standard for the AI Advent Challenge</description>

    <!-- Include PSR-12 standard -->
    <rule ref="PSR12">
        <!-- Allow longer lines for output/echo statements -->
        <exclude name="Generic.Files.LineLength" />
    </rule>

    <!-- Configure line length (soft limit 100, hard limit 120) -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120" />
            <property name="absoluteLineLimit" value="120" />
        </properties>
    </rule>

    <!-- Which files to check -->
    <file>src</file>
    <file>tools</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
</ruleset>

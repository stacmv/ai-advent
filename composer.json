{
    "name": "stacmv/ai-advent",
    "description": "AI Advent Challenge - CLI experiments with Claude, Deepseek, and YandexGPT",
    "type": "project",
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.4",
        "symfony/process": "^6.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AiAdvent\\": "src/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR12 src/ tools/",
        "lint-fix": "phpcbf --standard=PSR12 src/ tools/"
    }
}

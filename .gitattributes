# Auto detect text files and normalize line endings to LF
* text=auto

# PHP files
*.php text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
.env.example text eol=lf
.gitignore text eol=lf

# Binary files
*.mp4 binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
